<% @comment_events.each do |comment_event| %>
  <tr>
    <td><%= comment_event.user_id %></td>
    <td><%= comment_event.content %></td>
    <td><%= comment_event.event_id %></td>
    <td><%= comment_event.score_id %></td>
    <td><%= link_to 'Show', comment_event %></td>
    <td><%= link_to 'Edit', edit_comment_event_path(comment_event) %></td>
    <td><%= link_to 'Destroy', comment_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

